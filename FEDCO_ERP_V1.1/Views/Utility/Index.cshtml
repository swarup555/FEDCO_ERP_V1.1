            success:
            function (result) {
                $('#department').empty();
                $('#department').append($('<option></option>').val(0).html("SELECT DEPARTMENT"));
                $.each(result, function (i) {
                    $('#department').append($('<option></option>').val(result[i].ID).html(result[i].DEPARTMENT_NAME));
